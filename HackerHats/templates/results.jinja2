{% extends "base.jinja2" %}

{% block head %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js" 
		integrity="sha256-aUydBd3D3p3+5tVJXERlqMtoCej+p4tdD+dkJgeRWNU=" 
		crossorigin="anonymous"></script>
	<script src="{{ url_for('static', filename='js/results.js') }}"></script>
	<script>
		window.onload = function() {
			loadChart({{ case['id'] }}, {{ (responses or [])|tojson|safe }});
		};
	</script>
{% endblock %}

{% block body %}
    <div class="results-container" id="results-container">
    	<div id="results-chart-container">
    	<div class="results-chart" id="results-chart">
    		<canvas class="results-chart-canvas" id="results-chart-canvas"></canvas>
    	</div>
    	<div class="results-description" id="results-description">
    		<h3>{{ case['title'] }}</h3>
    		<p>{{ case['details'] }}</p>
    	</div>
    </div>
{% endblock %}